<div class="container">
<h1>News Articles - BBC</h1>
<h3>See rececent articles from BBC below:</h3>
<button id="scrape">Scrape Articles</button>

    {{#each Articles}}
    
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                    <p>{{summary}}</p>
                </div>
                <div class="card-action">
                    <a href="{{link}}">Read More</a>
                </div>
            </div>
        </div>
   
    {{/each}}
</div>