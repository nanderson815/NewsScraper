<div class="container">
    <div class="card">
        <div class="card-content">
        <h1 class="center-align">News Articles - BBC</h1>
        <h3 class="center-align">See rececent articles from BBC below:</h3>
        <button class="waves-effect waves-light btn-large" id="scrape">Scrape Articles</button>
    </div>
    </div>
    {{#each Articles}}
    
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                    <p>{{summary}}</p>
                </div>
                <div class="card-action">
                    <a href="{{link}}">Read More</a>
                    <a id="comments" data-id="{{_id}}">Comments</a>
                </div>
            </div>
        </div>
   
    {{/each}}
</div>